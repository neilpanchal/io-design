/* GENERAL
================================================== */

* {
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;

    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent;
}

html {
    font-size: 16px;
}

body {
    font-family: 'Roboto Mono', 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace;
    font-size: 14px;
    font-weight: 400;
    font-variant: normal;
    line-height: [$body_font_lh]rem;
    margin: 4rem 8rem 2rem 4rem;
    /*padding-bottom: calc([$footer_height]px * 2);*/
    color: #000;
    background: $bgcolor_body;

    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    -moz-osx-font-smoothing: $firefox_alias;
    height: 100%;
}

a {
    padding-bottom: 1px;
    text-decoration: none;
    color: $link_color;
    border-bottom: 1px solid $link_color_underline;
}

a:hover {
    color: $link_color_hover;
}

a.no_b {
    border-bottom: 0;
}

a.img_link {
    padding-bottom: 0;
    border-bottom: 0;
}

img {
    vertical-align: bottom;
    -ms-interpolation-mode: bicubic;
}

img.content_img {
    max-width: 100%;
    max-height: 100%;
}
hr {
    width: 100%;
    border: 0;
    border-bottom: 1px dashed #CCC;
    background: #FFF;
}
p,
div.line {
    margin-bottom: 1rem;
}

small {
    font-size: 80%;
}

.hide {
    display: none;
}

.k-video {
    margin: 0 auto;
}

.k-link-lightbox {
    cursor: -webkit-zoom-in;
    cursor:    -moz-zoom-in;
}

ul.exif li {
    display: inline-block;
}
ul.exif li:after {
    content: ' /';
}
ul.exif li:last-child:after {
    content: '';
}

.tag:before {
    content: '#';
}

span.k-note {
    padding-right: [$inset_pad]px;
    padding-left: [$inset_pad]px;
}


/* TYPOGRAPHY
================================================== */

h1 {
    font-size: [$h1_font_size]rem;
    line-height: [$body_font_lh]rem;
}

h2 {
    font-size: [$h2_font_size]rem;
    display: block;
    margin-bottom: 1em;
    text-transform: uppercase;
}

h3 {
    font-size: [$h3_font_size]rem;
    line-height: [$body_font_lh]rem;

}

h4 {
    font-size: [$h4_font_size]rem;
    line-height: [$body_font_lh]rem;
}

h1, h2, h3, h4, h5, h6, #left-container {
	/* letter-spacing: 2px; */
}

h1, h2, h3, h4, h5, h6{
}


/* TABLET */

@media only screen and (min-width: 48rem) and (max-width: 60rem) {
    h1 {
        font-size: 2rem;
        line-height: 1.05;
    }

    h2 {
        font-size: 1rem;
        display: block;
        margin-top: 2.25em;
        margin-bottom: 1em;
        text-transform: uppercase;
    }

    h3 {
        font-size: 1.375rem;
        line-height: 1.25;
    }

    h4 {
        font-size: 1.25rem;
        line-height: 1.25;
    }
}


/* PHONE LANDSCAPE - upto 48rem */

@media only screen and (max-width: 48rem) {
    h1 {
        font-size: 2.25rem;
        line-height: 1.125;
    }

    h2 {
        font-size: 1rem;
        display: block;
        margin-top: 2.25em;
        margin-bottom: 1em;
        text-transform: uppercase;
    }

    h3 {
        font-size: 1.75rem;
        line-height: 1.25;
    }

    h4 {
        font-size: 1.5rem;
        line-height: 1.25;
    }

    blockquote {
        font-size: 1.5rem;
        line-height: 1.45833333;
    }
}

/* PHONE PORTRAIT - 30-48rem */

@media only screen and (min-width: 30rem) and (max-width: 48rem) {
    h1 {
        font-size: 2.5rem;
        line-height: 1.125;
    }
    h2 {
        font-size: 1rem;
        display: block;
        margin-top: 2.25em;
        margin-bottom: 1em;
        text-transform: uppercase;
    }
    h3 {
        font-size: 1.5rem;
        line-height: 1.25;
    }
    h4 {
        font-size: 1.5rem;
        line-height: 1.25;
    }
    blockquote {
        font-size: 1.5rem;
        line-height: 1.45833333;
    }
}
