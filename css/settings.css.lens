    	display: none;
    }

    .cover_content,
    div#text.essays,
    div#text.pages {
        width: 100%;
    }

    #cover_scroll {
        padding-top: 10px;
        padding-bottom: 10px;
    }

    img.custom_logo {
        max-height: [$site_title_img_scale_mobile]px;
    }

    nav {
        display: none;
        float: none;
    }

    body.k-lens-splash div#left-container nav,
    body.k-lens-splash_fa div#left-container nav {
/*         display: none;
        float: none; */
    }

    footer.main {
        position: relative;
        display: block;
    }

    footer.main span.right_text {
        position: relative;
        float: none;
    }

    div#container {
        padding: 1rem 0;
    }
    div#content-caption div.col {
        float: none;
    }

    div#content-caption div.col.l,
    div#content-caption div.col.r {
        width: 100%;
    }

    div#content .pad {
        padding: 0 10px;
    }

    div#content-caption {
        padding-right: 0;
        padding-left: 0;
    }

    /* turn this on to position the arrows */
    div#content-pagination {
        position: static;
        height: auto;
    }

    a.content-pag {
        font-size: 18px;
        position: static;
        display: inline-block;
        width: auto;
        margin: 0;
        padding: 0 0 0 10px;
    }

    a.content-pag.next {
        right: auto;
    }

    a.content-pag.prev {
        left: auto;
    }

    /* fit to viewport */
    div#content div.media img {
        width: auto;
        max-height: 416px;
        margin: 0 auto;
    }

    /* show titles b/c hover won't work */
    a.img-hover span.overlay {
        position: relative;
        opacity: 1;
    }

    a.img-hover span.overlay_text,
    a.img-hover span.overlay_text.valign_middle {
        position: relative;
        display: block;
        /* force fixed */
        padding: [$title_pad_t_fx]px [$title_pad_lr_fx]px [$title_pad_b_fx]px;
        -webkit-transform: translateY(0);
           -moz-transform: translateY(0);
            -ms-transform: translateY(0);
             -o-transform: translateY(0);
                transform: translateY(0);
    }

    div#text {
        width: 280px;
    }

    article p.lead {
        font-size: 1.875rem;
        line-height: 2.5rem;
    }
    article .k-content-embed {
	    margin: 2rem auto;
	    width: 100%;
	}
    article time {
        display: block;
        float: none;
        margin-bottom: 1rem;
    }
    div.topic-gallery {
    	height: inherit;
    }
	div.topic-gallery > div {
		width: 100%;
		display: block;
	}
}

/* #Mobile (Landscape)
================================================== */

@media only screen and (min-width: 480px) and (max-width: 767px) {
    /* fit to viewport */
    div#content div.media img {
        width: auto;
        max-height: 268px;
        margin: 0 auto;
    }

    div#text {
        width: 440px;
    }
}


/* #Mobile (iPhone 5)
================================================== */

@media screen and (device-height: 568px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 2) {
    /* fit to viewport */
    div#content div.media img {
        width: auto;
        max-height: 568px;
        margin: 0 auto;
    }
}

