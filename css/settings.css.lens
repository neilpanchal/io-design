/* IMAGE HOVERS / TITLES
================================================== */

a.img-hover {
    position: relative;
    display: block;
    border-bottom: 0 !important;
}

.img-under-title {
    padding: [$title_pad_t_fx]px [$title_pad_lr_fx]px [$title_pad_b_fx]px;
    background: $title_hover_bg_color;
}

a.img-hover p,
.img-under-title p {
    margin-top: 10px;
    margin-bottom: 0;
}

a.img-hover span.overlay {
    position: absolute;
    z-index: 2;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: block;
    overflow: hidden;
    -webkit-transition: opacity 100ms
    -moz-transition: opacity 100ms;
        -ms-transition: opacity 100ms;
         -o-transition: opacity 100ms;
            transition: opacity 100ms;
    opacity: 0;
    background: $title_hover_bg_color;

    -ms-filter: 'progid: DXImageTransform.Microsoft.Alpha(Opacity=0)';
        filter: alpha(opacity=0);
}

a.img-hover:hover span.overlay {
    opacity: 1;

    -ms-filter: 'progid: DXImageTransform.Microsoft.Alpha(Opacity=100)';
        filter: alpha(opacity=100);
}

a.img-hover span.overlay_wrap {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
}

a.img-hover span.overlay_text {
    position: absolute;
    right: 0;
    left: 0;
    width: 100%;
    padding: [$title_pad_t]px [$title_pad_lr]px [$title_pad_b]px;
}

a.img-hover span.overlay_text.valign_middle {
    top: 50%;
    /* override t/b padding since we're centering */
    padding-top: 0;
    padding-bottom: 0;
    -webkit-transform: translateY(-50%);
       -moz-transform: translateY(-50%);
        -ms-transform: translateY(-50%);
         -o-transform: translateY(-50%);
            transform: translateY(-50%);
}

a.img-hover span.overlay_text.valign_top {
    top: 0;
}
a.img-hover span.overlay_text.valign_bottom {
    bottom: 0;
}

.content_text {
    font-size: [$title_font_size]rem;
    text-align: $title_align;
    color: $title_hover_text_color;
}

.vid_play {
    font-size: 11px;
    line-height: 0;
    position: absolute;
    z-index: 1;
    bottom: 8px;
    left: 8px;
    visibility: hidden;
    padding: 3px 5px 3px;
    -webkit-transition: opacity 1s;
       -moz-transition: opacity 1s;
         -o-transition: opacity 1s;
            transition: opacity 1s;
    opacity: 0;
    color: #FFF;
    -moz-border-radius: 2px;
         border-radius: 2px;
    background: rgba(0,0,0,0.3);
}

/* only show when image loads and if they're turned on in settings */
.kpgriditem.type_video.loaded .vid_play {
    visibility: $show_vid_play;
    opacity: 1;
}


